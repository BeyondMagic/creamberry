#!/usr/bin/env sh
#
# Description
#   Simple script to notify the volume settings of both sides
#   left and right
#
# Dependencies
#   libnotify ; notify-send
#   libpulse ; pactl
# 
# BeyondMagic ðŸ„¯ 2021

[ "$1" = "increase" ] \
  && {
  pactl -- set-sink-volume @DEFAULT_SINK@ +2% &
} || {
  pactl -- set-sink-volume @DEFAULT_SINK@ -2% &
}

"$SCRIPTS_FOLDER"/bars/module/top/_sound run > /tmp/top.fifo
