#!/usr/bin/env sh
#
# Description
#   Simple script to notify the volume settings of both sides
#   left and right
#
# Dependencies
#   libnotify ; notify-send
#   libpulse ; pactl
# 
# BeyondMagic Â© 2021

[ "$1" = "increase" ] \
  && {
  pactl -- set-sink-volume @DEFAULT_SINK@ +2% &
} || {
  pactl -- set-sink-volume @DEFAULT_SINK@ -2% &
}

"$(cd -- "$(dirname "$0")" >/dev/null 2>&1 && pwd -P)"/../bars/top_bar/_sound run > /tmp/top.fifo
